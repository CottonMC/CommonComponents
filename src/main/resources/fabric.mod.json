{
  "schemaVersion": 1,
  "id": "universalcomponents",
  "version": "${version}",

  "name": "Universal Components",
  "icon": "assets/universalcomponents/icon.png",
  "description": "Common components for integration",
  "license": "MIT",
  "contact": {
    "sources": "https://github.com/CottonMC/UniversalComponents"
  },
  "environment": "*",
  "entrypoints": {
    "main": [
      "io.github.cottonmc.component.UniversalComponents"
    ]
  },
  "mixins": [
    "mixins.unicomp.json"
  ],
  "depends": {
    "fabricloader": ">=0.4.0",
    "cardinal-components-base": "*"
  },
  "custom": {
    "modmenu:api": true,
    "cardinal-components": [
      "universalcomponents:inventory",
      "universalcomponents:tank",
      "universalcomponents:capacitor",
      "universalcomponents:data_provider"
    ]
  }
}
